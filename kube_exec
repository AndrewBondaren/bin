POD=$1
USER=$2

if [ -n "$USER" ];
 then 
  if [ "$POD" = "monolith" ]
  then 
   kubectl exec -it $(kube_pods | grep $POD | awk '{print $1}') -c php -- bash
  else 
   kubectl exec -it $(kube_pods | grep $POD | awk '{print $1}') -c fpm -- bash
  fi
 else
  if [ "$POD" = "monolith" ]
  then 
   kubectl exec -it $(kube_pods | grep $POD | awk '{print $1}') -c php -- bash
  else 
   kubectl exec -it $(kube_pods | grep $POD | awk '{print $1}') -c fpm -- bash
  fi
fi

